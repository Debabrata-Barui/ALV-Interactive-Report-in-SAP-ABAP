      WA_EVENT TYPE SLIS_ALV_EVENT.

DATA: IT_HEADER TYPE SLIS_T_LISTHEADER,
      WA_HEADER TYPE SLIS_LISTHEADER.


DATA: LV_MATNR TYPE MATNR.


DATA: D2(20) TYPE C,
      YEAR(10) TYPE C,
      MONTH(10) TYPE C,
      DAY(10) TYPE C,
      YDBDATE(40) TYPE C.


D2 = SY-DATUM.

YEAR = D2+0(4).
MONTH = D2+4(2).
DAY = D2+6(2).



CONCATENATE DAY MONTH YEAR INTO YDBDATE SEPARATED BY '/'.



START-OF-SELECTION.
