REPORT YDB_ALV_REP.

TYPE-POOLS: SLIS.
TABLES: MARA.

TYPES: BEGIN OF ST_MARA,
       MATNR TYPE MATNR,
       MTART TYPE MTART,
       MBRSH TYPE MBRSH,
       MEINS TYPE MEINS,
  END OF ST_MARA.

DATA: IT_MARA TYPE TABLE OF ST_MARA,
      WA_MARA TYPE ST_MARA.

DATA: IT_MAKT TYPE TABLE OF MAKT,
      WA_MAKT TYPE MAKT.

